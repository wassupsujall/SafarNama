<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bgimage"
    tools:context=".ui.home.HomeFragment">

    <!--add three buttons in layout-->

    <ImageButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="214dp"

        android:layout_marginTop="30px"
        android:background="@drawable/img" />

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="410dp"
        android:layout_height="214dp"
        android:layout_alignLeft="@+id/button"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="202dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="HOTEL BOOKING"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_below="@id/button"
        android:layout_marginTop="24dp"

        android:background="@drawable/loaf" />

    <TextView
        android:id="@+id/myImageViewText1"
        android:layout_width="410dp"
        android:layout_height="190dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignTop="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-4dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Tourist Attraction"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_below="@id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/img_4" />

    <TextView
        android:id="@+id/myImageViewText3"
        android:layout_width="410dp"
        android:layout_height="169dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignTop="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-4dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="REALTIME LOCATION"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold" />


</RelativeLayout>
